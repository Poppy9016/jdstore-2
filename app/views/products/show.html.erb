    <div class="goods-detail-nav-name-block">
        <div class="container main-block">
            <div class="border-line"></div>
            <h2 class="nav-name">详情描述</h2>
        </div>
    </div>
    <ul class="param-list">
        <li>
            <img class="square" src="<%= @product.imgurl %>">
        </li>
    </ul>
    <div class="goods-detail-nav-name-block">
        <div class="container main-block">
            <div class="border-line"></div>
            <h2 class="nav-name">规格参数</h2>
        </div>
    </div>
    <ul class="param-list">
        <li>
            <img class="square" src="<%= @product.imgurl2 %>" >
        </li>
    </ul>
</div>
