<%= render "common/navbar" %>
<%= render "common/flashes" %>
<div class="page-main">
    <div class="container">
        <div class="checkout-box">
            <div class="container-fluid">
                <div class="m-newCates1">
                    <div class="m-newCates">
                        <div class="g-row">
                            <div class="m-newCate">
                                <header class="hd">
                                    <div class="left">
                                        <% if @products.present? %>
                                            <h3 class="name">已为您找到<%= @products.count %>件商品</h3>
                                        </div>
                                    </header>
                                    <div class="m-sortbar" >
                                        <div class="category" >
                                            <span class="name" >商品排序：</span>
                                            <a class="categoryItem j-categoryItem active" ><%= link_to("新品", products_path) %></a>
                                            <!-- <a  class="categoryItem j-categoryItem" ><%= link_to("销量", products_path(:order => "by_product_quantity")) %></a>
                                            <a  class="categoryItem j-categoryItem" ><%= link_to("价格", products_path(:order => "by_product_price")) %></a> -->
                                        </div>
                                    </div>
                                    <div class="bd">
                                        <ul class="itemList">
                                            <% @products.each do |product| %>
                                                <li class="item">
                                                    <div class="m-product j-product">
                                                        <div class="hd">
                                                            <!-- <a href="/" title="" target="_blank">
                                                        <img src="https://ww1.sinaimg.cn/large/006tKfTcly1fcse3jvzcij30bo0boaar.jpg" alt="" class="j-lazyload img-lazyload img img-lazyloaded">
                                                    </a> -->
                                                            <%= link_to product_path(product) do %>
                                                                <% if product.image.present? %>
                                                                    <%= image_tag(product.image.medium.url, class: "j-lazyload img-lazyload img img-lazyloaded") %>
                                                                <% else %>
                                                                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "j-lazyload img-lazyload img img-lazyloaded") %>
                                                                <% end %>
                                                            <% end %>
                                                        </div>
                                                        <div class="bd">
                                                            <h4 class="name">
                                                                <a class="name" title="<%= product.title %>" target="_blank">
                                                                    <span class="name">
                                                                        <%= link_to product_path(product) do %>
                                                                            <%= product.title %>
                                                                        <% end %>
                                                                    </span>
                                                                </a>
                                                            </h4>
                                                            <p class="price">
                                                                <span>¥ <%= product.price %></span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </li>
                                            <% end %>
                                        <% else %>
                                            抱歉，没找到您要的商品。
                                    <% end %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--新品首发 end-->
            </div>
        </div>
    </div>
</div>
