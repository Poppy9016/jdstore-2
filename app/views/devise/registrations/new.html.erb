<div style="margin-top:120px;margin-bottom:30px;line-height:275%;">
    <h1 class="text-center">用户注册</h1>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <div class="form-group" style="color:#FF0027">
        <div class="text-center">
            <%= devise_error_messages! %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <%= f.email_field :email, label: "邮箱", placeholder: "请输入邮箱" ,autofocus: true , class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <%= f.password_field :password, label: "密码", placeholder: "请输入密码" ,autocomplete: "off", class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <%= f.password_field :password_confirmation, label: "密码确认",placeholder: "请确认密码" ,autocomplete: "off", class: "form-control"%>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <%= f.submit "注册", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:#95989A;border-radius:50px;" %>
        </div>
    </div>
<% end %>
