<div class="col-md-12">
    <h3 class="gnamedd">订单明细(<%= render_order_paid_state(@order) %>)</h3>
    <br>
    <br>
    <%= render "admin/orders/state_option", order: @order %>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th width="70%">商品明细</th>
                <th>单价</th>
                <th>数量</th>
                <th>小计</th>
            </tr>
        </thead>
        <tbody>
            <% @product_lists.each do |product_list| %>
                <tr>
                    <td>
                        <%= product_list.product_name %>
                    </td>
                    <td>
                        <%= product_list.product_price %>
                    </td>
                    <td>
                        <%= product_list.quantity %>
                    </td>
                    <td>
                        <%= product_list.quantity * product_list.product_price %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="total clearfix">
        <span class="pull-right">
            总计 <%= @order.total %> 元
                              </span>
    </div>
    <hr>
    <br>
    <h3 class="gnamedd">收货信息</h3>
    <br>
    <br>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <td>
                    姓名:
                                </td>
                <td width="90%">
                    <%= @order.billing_name %>
                </td>
            </tr>
            <tr>
                <td>
                    电话:
                                </td>
                <td width="90%">
                    <%= @order.shipping_name %>
                </td>
            </tr>
            <tr>
                <td>
                    地址:
                                </td>
                <td width="90%">
                    <%= @order.billing_address %>
                </td>
            </tr>
            <tr>
                <td>
                    邮编:
                                </td>
                <td width="90%">
                    <%= @order.shipping_address %>
                </td>
            </tr>
        </tbody>
    </table>
</div>
