<h2> 添加新产品 </h2>
<br>
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
        <%= f.input :title,label: "名称",placeholder: "请输入产品名称" %>
    </div>
    <div class="group">
        <%= f.input :description,label: "产品描述",placeholder: "请输入产品描述"%>
    </div>
    <div class="group">
        <%= f.input :quantity,label: "数量",placeholder: "请输入产品数量" %>
    </div>
    <div class="group">
        <%= f.input :price,label: "价格",placeholder: "请输入产品价格"  %>
    </div>
    <div class="group">
        <%= f.input :image,label: "产品图片", as: :file %>
    </div>
    <%= f.submit "提交",class: "btn btn-primary btn-sm",data: { disable_with: "Submiting..." } %>
<% end %>
