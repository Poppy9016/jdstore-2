<h2> 编辑产品 </h2>
<br>
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
        <%= f.input :title,label: "名称",placeholder: "请输入产品名称" %>
    </div>
    <div class="group">
        <%= f.input :description,label: "产品描述",placeholder: "请输入产品描述"%>
    </div>
    <div class="group">
        <%= f.input :quantity,label: "数量",placeholder: "请输入产品数量" %>
    </div>
    <div class="group">
        <%= f.input :price,label: "价格",placeholder: "请输入产品价格"  %>
    </div>
    <% if @product.image.present? %>
        <span>目前商品图</span> <br>
        <%= image_tag(@product.image.thumb.url) %>
    <% end %>
    <div class="group">
        <%= f.input :image,label: "产品图片",  as: :file %>
    </div>
    <div class="group">
        <%= f.input :imgurl,label: "详情描述",placeholder: "请输入图片url"  %>
    </div>
    <div class="group">
        <%= f.input :imgurl2,label: "规格参数",placeholder: "请输入图片url"  %>
    </div>
    <%= f.submit "提交",class: "btn btn-primary btn-sm",data: { disable_with: "Submiting..." } %>
<% end %>
